@model Jogador
@{
    ViewData["Title"] = "Jogadores";
}

<div class="titulo_pagina">
    <h1>cadastro de @ViewData["Title"]</h1>
</div>

<form method="POST" action='@Url.Action("Cadastrar")' class="cadastro">

    <div class="campo">
        <label>ID Jogador</label>
        <input type="text" name="IdJogador" />
    </div>

    <div class="campo">
        <label>ID Equipe</label>
        <section name="IdEquipe" id="IdEquipe">
            <option value="0">Selecione uma opção...</option>
            @foreach (var item in ViewBag.Equipes)
            {
                <option value="@item.IdEquipe">@item.Nome</option>
            }

        </section>
    </div>

    <div class="campo">
        <label>Nome</label>
        <input type="text" name="Nome" />
    </div>

    <div class="campo">
        <label>Email</label>
        <input type="text" name="Email" />
    </div>

    <div class="campo">
        <label>Senha</label>
        <input type="password" name="Senha" />
    </div>

    <button class="gradient btn" type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>AÇÕES</th>
    </thead>
    <tbody>
       @foreach (Jogador jogador in ViewBag.Jogadores)
        {
            <tr>
                    <td>@jogador.IdJogador</td>
                    <td>@jogador.Nome</td>
                    <td>@jogador.Email</td>
                    <td><a asp-area="Link para excluir um jogador" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@jogador.IdJogador">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>